<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProjectListView">
   <children>
      <SplitPane dividerPositions="0.5">
         <items>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="597.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Project overview">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="SearchProjectButton" mnemonicParsing="false" text="Search" HBox.hgrow="NEVER" />
                              <TextField fx:id="SearchProjectTitle" maxWidth="250.0" promptText="Search by title" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <ListView fx:id="ProjectList">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></ListView>
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="597.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Team members">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="SearchTeam" mnemonicParsing="false" text="Search" HBox.hgrow="NEVER" />
                              <TextField fx:id="TeamMemberIdSearch" maxWidth="250.0" promptText="Search by employee ID" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <VBox>
                     <children>
                        <Accordion>
                          <panes>
                            <TitledPane fx:id="TeamMember1" animated="false" text="teamMemberId">
                              <content>
                                    <FlowPane>
                                       <children>
                                          <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="570.0" />
                                       </children>
                                    </FlowPane>
                              </content>
                            </TitledPane>
                              <TitledPane fx:id="TeamMember2" animated="false" text="teamMemberId">
                                 <content>
                                    <FlowPane>
                                       <children>
                                          <ScrollPane prefWidth="570.0" />
                                       </children>
                                    </FlowPane>
                                 </content>
                              </TitledPane>
                          </panes>
                        </Accordion>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</Pane>
